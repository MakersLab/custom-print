{% extends "base.jinja2"  %}

{% block content %}
    <h1>
        Nová objednávka <b>č. S{{ orderId }}</b>
    </h1>
    <div>
        <div>
            <p>
                {% for file in files %}
                    <div>
                        {{ file.name }} -
                        {{ file.material }} -
                        {{ file.color }} -
                        {{ file.amount }}ks -
                        {{ file.price }},-Kč
                    </div>
                {% endfor %}
            </p>
        </div>
        <div>
            Celkem {{ price }},-Kč
        </div>
        <div>
            Druh dodání <b>{{ delivery }}</b>
        </div>
        <div>
            Zákazníkův email <b>{{ email }}</b>
        </div>
        {% if details %}
            <br>
            <b>Požadavky od zákazníka:</b>
            <p class="customer__request">
                {{ details }}
            </p>
        {% endif %}
        <div>
        </div>
    </div>
{% endblock %}
